{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:best-practices",
		"security:minimumReleaseAgeNpm",
		"schedule:weekends"
	],
	"assignees": ["heldinz"],
	"packageRules": [
		{
			"matchUpdateTypes": ["minor", "patch", "pin", "digest"],
			"automerge": true,
			"automergeStrategy": "squash"
		}
	]
}
