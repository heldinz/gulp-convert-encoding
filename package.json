{
	"name": "gulp-convert-encoding",
	"version": "3.0.0",
	"description": "Convert character encodings using iconv-lite.",
	"license": "MIT",
	"repository": "heldinz/gulp-convert-encoding",
	"author": {
		"name": "Alice Rose",
		"email": "hello@alicerosemurphy.com",
		"url": "https://www.alicerosemurphy.com"
	},
	"type": "module",
	"exports": "./index.js",
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"coverage": "c8 -r lcovonly npm test",
		"formatter": "npm run prettier -- --list-different",
		"formatter:fix": "npm run prettier -- --write",
		"linter": "eslint  */**/*.js",
		"linter:fix": "npm run linter -- --fix",
		"prettier": "prettier .*rc *.{json,md} */**/*.js",
		"test": "ava",
		"test:watch": "npm test -- --watch",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{js,json,md}": "prettier --write",
		".*rc": "prettier --write",
		"*.js": ["eslint --fix", "prettier --write"]
	},
	"files": ["index.js"],
	"keywords": [
		"character encoding",
		"character decoding",
		"charset",
		"convert",
		"decoding",
		"encoding",
		"encodings",
		"gulp",
		"gulpplugin",
		"iconv",
		"iconv-lite"
	],
	"dependencies": {
		"gulp-plugin-extras": "1.0.0",
		"iconv-lite": "0.6.3",
		"plugin-error": "2.0.1"
	},
	"devDependencies": {
		"@eslint/js": "9.9.0",
		"ava": "6.1.3",
		"c8": "10.1.2",
		"eslint": "8.57.0",
		"globals": "15.9.0",
		"husky": "9.1.4",
		"lint-staged": "15.2.9",
		"p-event": "6.0.1",
		"prettier": "3.3.3",
		"vinyl": "3.0.0"
	},
	"peerDependencies": {
		"gulp": ">=5"
	},
	"peerDependenciesMeta": {
		"gulp": {
			"optional": true
		}
	}
}
